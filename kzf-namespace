#!/usr/bin/fish

set namespace (
  kls namespaces |
    sort --reverse |
    fzf --query "$argv" \
        --select-1 \
        --preview 'kubectl get all --namespace {}' \
        --preview-window=right:80% \
        --prompt='namespace> ')
test -n "$namespace" || exit 1

echo Switching namespace to {$namespace}...
kubectl config set-context --current --namespace=$namespace
